doctype html
html
	head
		title= "Student Mentor Portal"
		link(rel="stylesheet",type="text/css", href="/css/index.css")
		link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css')
		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
	
	body 
		.container
			nav.navbar.navbar-expand-lg.navbar-light.bg-light
				a.navbar-brand(href='#') Student-Mentor Portal
				button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
					span.navbar-toggler-icon
				#navbarNavAltMarkup.collapse.navbar-collapse
					.navbar-nav
						a.nav-link.active(href='/')
							| Home 
							span.sr-only (current)
						a.nav-link(href='/createStudent') Create Student
						a.nav-link(href='/createMentor') Create Mentor
						a.nav-link(href='/assignMentor') Assign Mentor
						a.nav-link(href='/changeMentor') Change Mentor
		block content
		script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js")
		